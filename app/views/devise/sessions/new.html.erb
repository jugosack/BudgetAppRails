<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <section class='devise'>
    <header>
      <div>
      <%= link_to  :root do %>
        <%= image_tag "icons8-back-72.png", style: 'height:30px; width:30; padding-left: 10px' %>
      <% end  %>
    </div>
      <h1>Login</h1>
      <%= f.submit "Log in", class: 'btnlogin' %>
    </header>
    <main>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field border-top border-bottom">
        <%= f.email_field :email, placeholder: 'Email', autocomplete: "email" %>
      </div>
      <div class="field border-bottom">
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password" %>
      </div>
      <div class="links">
        <%= link_to "Forgot password?", new_password_path(resource_name) %>
      </div>
    </main>
  </section>
<% end %>