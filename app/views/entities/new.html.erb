<%= form_with(model: @entity,  url:"/users/#{current_user.id}/groups/#{@group_id}/entities" ) do |form| %>

  <div class="nav-header">
    <div>
      <%= link_to  user_group_entities_url(author_id: current_user.id, group_id: @group_id) do %>
        <%= image_tag "icons8-back-72.png", style: 'height:20px; width:20px;' %>
      <% end  %>
    </div>
    <h4 class="text-gray-4">NEW ENTITY </h4>
    <div class="actions">
      <%=  form.submit 'NEXT', class:"btn-next-newcat" %>
    </div>
  </div>


  <% if @entity.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@entity.errors.count, "error") %> prohibited this entity from being saved:</h2>

      <ul>
        <% @entity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class= "form-group-custom" >
      <%= form.label :icon, "Entity name:", class: "icon-label-cat" %>
      <%= form.text_field :name, required: true, class:"form-control-custom", placeholder: "Enter entity name", autofocus: true %>
    </div>

 <div class= "form-group-custom" >
 <%= form.label :icon, "Amount:", class: "icon-label-cat" %>
      <%= form.number_field :amount,  required: true, class:"form-control-custom", placeholder: "Enter entity amount", autofocus: true %>
  </div>

  
  
   <div class='submit-new-category-cotainer'>
    <div class= 'submit-new-category-btn'>
        <%=  form.submit ('Add Entity'), class:" btn-submit-new-cat" %>
      </div> 
    </div> 
 
<% end %>
