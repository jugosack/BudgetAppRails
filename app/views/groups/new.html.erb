<%= form_with(model: @group, url: user_groups_path) do |f| %>

  <div class="nav-header">
    <div>
      <%= link_to  :back do %>
        <%= image_tag "icons8-back-72.png", style: 'height:20px; width:20px;' %>
      <% end  %>
    </div>
    <h4 class="text-gray-4">NEW CATTEGORY</h4>
    <div class="actions">
      <%=  f.submit ('NEXT'), class:"btn-next-newcat" %>
    </div>
  </div>

  <div class= "form-group-custom" >
      <%= f.label :icon, "Select a category :", class: "icon-label-cat" %>
      <%= f.select :icon, ["Education", "Entertainment", "Healthcare", "Shopping", "Utilities", "Other" ], class:"form-icon-custom" %>
    </div>

    <div class= "form-group-custom" >
     <%= f.label :name, "Name", class: "name-lab-cat" %>
      <%= f.text_field :name,  required: true, class:"form-control-custom", placeholder: "Enter category name", autofocus: true %>
    </div>

    
    
  <div class='submit-new-category-cotainer'>
    <div class= 'submit-new-category-btn'>
        <%=  f.submit ('Add Category'), class:" btn-submit-new-cat" %>
      </div> 
    </div> 
  </div> 
  
  <% end %>